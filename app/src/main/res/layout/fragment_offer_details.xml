<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/offer_details_layout"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_shadow"
    tools:context=".ui.fragments.OfferDetailsFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black_shadow"
        android:theme="@style/ToolbarTheme"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsingToolbarLayout"
            android:layout_width="match_parent"
            android:layout_height="430dp"
            android:fitsSystemWindows="false"
            app:contentScrim="?attr/colorPrimary"
            android:background="@color/black_shadow"
            app:expandedTitleTextAppearance="@style/TextAppearance.AppCompat.Title"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:statusBarScrim="?attr/colorPrimary">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/offer_photos_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                app:layout_collapseMode="parallax"
                android:fitsSystemWindows="true"
                android:visibility="gone"/>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/photo_placeholder"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax"
                android:foregroundTintMode="src_over"
                android:src="@drawable/home_img_sample"
                app:shapeAppearanceOverlay="@style/BottomRounderCornersSize10Percent"
                />

        </com.google.android.material.appbar.CollapsingToolbarLayout>


    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-140dp"
        android:background="@drawable/round_top_corners_bg"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/nestedScrollview_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="25dp">

            <TextView
                android:id="@+id/type"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/roboto"
                android:text="Home"
                android:theme="@style/TitleText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:layout_constraintTop_toBottomOf="@id/type"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="10dp"
                android:theme="@style/SubTitleText_white"
                android:text="500.000"
                android:drawablePadding="8dp"
                app:drawableStartCompat="@drawable/ic_dollar_24" />

            <TextView
                android:id="@+id/availability"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:theme="@style/SubTitleText_grey"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/price"
                android:text="Sold" />

            <LinearLayout
                android:id="@+id/surface_tile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="70dp"
                android:minHeight="70dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/black_tile"
                android:paddingBottom="5dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/surface"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:theme="@style/SubTitleText_grey"
                    android:layout_gravity="center"
                    android:text="200" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-15dp"
                    android:theme="@style/Sign_accent"
                    android:layout_gravity="center"
                    android:text="m&#178;" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rooms_tile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="70dp"
                android:minHeight="70dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/surface_tile"
                android:layout_marginEnd="10dp"
                android:background="@drawable/black_tile"
                android:paddingBottom="5dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/rooms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:theme="@style/SubTitleText_grey"
                    android:layout_gravity="center"
                    android:text="4" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-15dp"
                    android:theme="@style/Sign_accent"
                    android:layout_gravity="center"
                    android:text="rooms" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/availability"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/Body_grey"
                    android:text="Description"
                    android:drawablePadding="8dp" />

                <TextView
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/Body_white"
                    android:text="@string/sample_text"
                    android:layout_marginTop="8dp"/>

                <LinearLayout
                    android:layout_marginTop="48dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gradient_tile"
                    android:padding="20dp"
                    android:orientation="vertical">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/static_map"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:adjustViewBounds="true"
                        android:src="@drawable/static_map_sample"
                        app:shapeAppearanceOverlay="@style/AllRounderCornersSize10Percent"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:theme="@style/Body_grey"
                        android:text="Address"
                        android:layout_marginTop="16dp"
                        android:drawablePadding="8dp" />

                    <TextView
                        android:id="@+id/address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:theme="@style/Body_white"
                        android:text="22 Sunset road, San Diego, CA"
                        android:layout_marginTop="8dp"/>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/Body_grey"
                    android:gravity="center"
                    android:text="Nearby\n points of interest"
                    android:layout_marginTop="16dp"
                    android:drawablePadding="8dp" />

                <TextView
                    android:id="@+id/nearby"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/Body_white"
                    android:gravity="center"
                    android:text="Hospital, school, Market"
                    android:layout_marginTop="8dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:layout_weight="2"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/agent_avatar"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:adjustViewBounds="true"
                            android:scaleType="centerCrop"
                            android:background="@color/black_shadow"
                            android:layout_weight="1"
                            android:src="@drawable/avatar_circle"/>

                        <TextView
                            android:id="@+id/agent_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Kevin Hart"
                            android:theme="@style/ImageTag"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:layout_gravity="center"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Publication date"
                            android:theme="@style/ExtraSubTitleText_grey"/>
                        <TextView
                            android:id="@+id/publication_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="22/03/2022 "
                            android:theme="@style/ExtraSubTitleText_grey"
                            android:layout_marginTop="5dp"/>


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Sale date"
                            android:theme="@style/ExtraSubTitleText_grey"
                            android:layout_marginTop="30dp"/>
                        <TextView
                            android:id="@+id/sale_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="24/06/2022 "
                            android:theme="@style/ExtraSubTitleText_grey"
                            android:layout_marginTop="5dp"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>



    </androidx.core.widget.NestedScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>
