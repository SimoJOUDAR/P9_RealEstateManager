<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RealEstateManager" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange_shadow</item>
        <item name="colorPrimaryVariant">@color/orange_shadow</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryDark">?attr/colorPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange_shadow</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@android:color/transparent</item>
        <!-- Status bar -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- shapeAppearanceOverlay for ShapeableImageView -->
    <style name="BottomRounderCornersSize10Percent" parent="">
        <item name="cornerSizeBottomLeft">10%</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerSizeBottomRight">10%</item>
        <item name="cornerFamilyBottomRight">rounded</item>
    </style>

    <style name="AllRounderCornersSize10Percent" parent="">
        <item name="cornerSize">10%</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <!-- Toolbar themes -->
    <style name="ToolbarTheme" parent="Theme.RealEstateManager">
        <item name="colorPrimary">@color/black_shadow</item>
    </style>

    <!-- Text themes -->
    <style name="FontStyle" parent="">
        <item name="fontFamily">@font/roboto</item>
    </style>
    <style name="TitleText" parent="FontStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SubTitleText_grey" parent="FontStyle">
        <item name="android:textColor">@color/grey_light</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ExtraSubTitleText_grey" parent="FontStyle">
        <item name="android:textColor">@color/grey_light</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="SubTitleText_white" parent="FontStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="Sign_accent" parent="FontStyle">
        <item name="android:textColor">@color/orange_shadow</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Body_white" parent="FontStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Body_title" parent="FontStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ImageTag" parent="FontStyle">
        <item name="android:textColor">@color/orange_shadow</item>
        <item name="android:textSize">18sp</item>
    </style>

<!--    BottomAppBarButtons theme-->
    <style name="BottomAppBarButtons" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="drawableTint">@color/white</item>
        <item name="backgroundColor">@color/black_shadow</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
    </style>

    <style name="BottomAppBarFloatingButtonsShape" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="SoldRentedForeground" parent="">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="LoanSimulatorTitles" parent="Body_title">
        <item name="android:textSize">18sp</item>
    </style>


</resources>